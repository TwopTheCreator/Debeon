<Page x:Class="Debeon.Views.GraphicsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#252526">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40">
        <StackPanel>
            <TextBlock Text="Graphics Settings" Style="{StaticResource SectionHeaderStyle}" FontSize="32" Margin="0,0,0,24"/>

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel>
                    <TextBlock Text="Quality Settings" Style="{StaticResource SectionHeaderStyle}"/>

                    <StackPanel Margin="0,0,0,20">
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Graphics Quality Level" Style="{StaticResource SettingLabelStyle}" DockPanel.Dock="Left"/>
                            <TextBlock x:Name="GraphicsQualityValue" Text="10" Foreground="#0078D4" DockPanel.Dock="Right"/>
                        </DockPanel>
                        <Slider x:Name="GraphicsQualitySlider" Minimum="1" Maximum="21" Value="10" Style="{StaticResource CustomSliderStyle}"
                                TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="GraphicsQualitySlider_ValueChanged"/>
                        <TextBlock Text="Higher quality provides better visuals but requires more GPU power" Style="{StaticResource SettingDescriptionStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Shadow Quality" Style="{StaticResource SettingLabelStyle}" DockPanel.Dock="Left"/>
                            <TextBlock x:Name="ShadowQualityValue" Text="3" Foreground="#0078D4" DockPanel.Dock="Right"/>
                        </DockPanel>
                        <Slider x:Name="ShadowQualitySlider" Minimum="0" Maximum="3" Value="3" Style="{StaticResource CustomSliderStyle}"
                                TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="ShadowQualitySlider_ValueChanged"/>
                        <TextBlock Text="0 = Off, 1 = Low, 2 = Medium, 3 = High" Style="{StaticResource SettingDescriptionStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Texture Quality" Style="{StaticResource SettingLabelStyle}" DockPanel.Dock="Left"/>
                            <TextBlock x:Name="TextureQualityValue" Text="3" Foreground="#0078D4" DockPanel.Dock="Right"/>
                        </DockPanel>
                        <Slider x:Name="TextureQualitySlider" Minimum="0" Maximum="3" Value="3" Style="{StaticResource CustomSliderStyle}"
                                TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="TextureQualitySlider_ValueChanged"/>
                        <TextBlock Text="Higher values use more VRAM but provide sharper textures" Style="{StaticResource SettingDescriptionStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Anti-Aliasing" Style="{StaticResource SettingLabelStyle}" DockPanel.Dock="Left"/>
                            <TextBlock x:Name="AntiAliasingValue" Text="4x" Foreground="#0078D4" DockPanel.Dock="Right"/>
                        </DockPanel>
                        <Slider x:Name="AntiAliasingSlider" Minimum="0" Maximum="8" Value="4" Style="{StaticResource CustomSliderStyle}"
                                TickFrequency="2" IsSnapToTickEnabled="True" ValueChanged="AntiAliasingSlider_ValueChanged"/>
                        <TextBlock Text="Smooths jagged edges at the cost of performance" Style="{StaticResource SettingDescriptionStyle}"/>
                    </StackPanel>

                    <CheckBox x:Name="VsyncCheckBox" Content="Enable V-Sync" IsChecked="True" Foreground="White" Margin="0,0,0,8"/>
                    <TextBlock Text="Prevents screen tearing but may increase input lag" Style="{StaticResource SettingDescriptionStyle}" Margin="0,0,0,20"/>

                    <CheckBox x:Name="FullscreenCheckBox" Content="Fullscreen Mode" Foreground="White" Margin="0,0,0,8"/>
                    <TextBlock Text="Run Roblox in fullscreen for better performance" Style="{StaticResource SettingDescriptionStyle}"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel>
                    <TextBlock Text="Advanced Graphics" Style="{StaticResource SectionHeaderStyle}"/>

                    <StackPanel Margin="0,0,0,20">
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Render Distance" Style="{StaticResource SettingLabelStyle}" DockPanel.Dock="Left"/>
                            <TextBlock x:Name="RenderDistanceValue" Text="1000" Foreground="#0078D4" DockPanel.Dock="Right"/>
                        </DockPanel>
                        <Slider x:Name="RenderDistanceSlider" Minimum="500" Maximum="3000" Value="1000" Style="{StaticResource CustomSliderStyle}"
                                TickFrequency="100" ValueChanged="RenderDistanceSlider_ValueChanged"/>
                        <TextBlock Text="Maximum distance at which objects are rendered" Style="{StaticResource SettingDescriptionStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Anisotropic Filtering" Style="{StaticResource SettingLabelStyle}" DockPanel.Dock="Left"/>
                            <TextBlock x:Name="AnisotropicValue" Text="16x" Foreground="#0078D4" DockPanel.Dock="Right"/>
                        </DockPanel>
                        <Slider x:Name="AnisotropicSlider" Minimum="0" Maximum="16" Value="16" Style="{StaticResource CustomSliderStyle}"
                                TickFrequency="4" IsSnapToTickEnabled="True" ValueChanged="AnisotropicSlider_ValueChanged"/>
                        <TextBlock Text="Improves texture quality at oblique angles" Style="{StaticResource SettingDescriptionStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,12">
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Particle Quality" Style="{StaticResource SettingLabelStyle}" DockPanel.Dock="Left"/>
                            <TextBlock x:Name="ParticleQualityValue" Text="3" Foreground="#0078D4" DockPanel.Dock="Right"/>
                        </DockPanel>
                        <Slider x:Name="ParticleQualitySlider" Minimum="0" Maximum="3" Value="3" Style="{StaticResource CustomSliderStyle}"
                                TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="ParticleQualitySlider_ValueChanged"/>
                        <TextBlock Text="Quality and density of particle effects" Style="{StaticResource SettingDescriptionStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel>
                    <TextBlock Text="Resolution" Style="{StaticResource SectionHeaderStyle}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Width:" Style="{StaticResource SettingLabelStyle}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBox x:Name="ResolutionWidthBox" Grid.Column="1" Text="1920" Height="32" VerticalContentAlignment="Center"/>

                        <TextBlock Grid.Column="2" Text="Ã—" Style="{StaticResource SettingLabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="3" Text="Height:" Style="{StaticResource SettingLabelStyle}" VerticalAlignment="Center" Margin="12,0,12,0"/>
                        <TextBox x:Name="ResolutionHeightBox" Grid.Column="4" Text="1080" Height="32" VerticalContentAlignment="Center"/>
                    </Grid>

                    <TextBlock Text="Set custom resolution for Roblox window" Style="{StaticResource SettingDescriptionStyle}" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
