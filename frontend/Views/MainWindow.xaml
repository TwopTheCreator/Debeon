                </ScrollViewer>

                <StackPanel Grid.Row="2" Margin="20,20,20,24">
                    <Button Style="{StaticResource AccentButtonStyle}" Click="ApplyConfiguration" Width="210" Height="40">
                        <TextBlock Text="Apply Configuration" FontSize="14"/>
