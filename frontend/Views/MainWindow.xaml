                    <TextBlock Text="DEBEON" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,4"/>
                    <TextBlock Text="Roblox Bootstrapper" FontSize="12" Foreground="#888888"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
